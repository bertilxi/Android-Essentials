<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clase3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="folderit.net.ejemplos.clase3.Clase3Activity">

    <Button
        android:text="ANR 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_anr1" />

    <Button
        android:text="handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_anr1"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_handler" />

    <Button
        android:text="asynctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_handler"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_asynctask" />

    <Button
        android:text="servicio iniciado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_asynctask"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_started_service" />

    <Button
        android:text="servicio enlazado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_started_service"
        android:layout_alignEnd="@+id/button_started_service"
        android:id="@+id/button_bound_service" />

    <Button
        android:text="Alarma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_bound_service"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_alarm" />
</RelativeLayout>
